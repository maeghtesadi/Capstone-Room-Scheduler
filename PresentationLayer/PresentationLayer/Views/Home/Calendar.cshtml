@{
    ViewBag.Title = "Home Page";
}


<div class="calendar-header">
    <ul class="upper-header">
        <li>
			<span class="dayOfTheWeek">@DateTime.Now.DayOfWeek</span> <br>
			<div class="date" style="font-size:18px; margin-top:-20px"> <span class="month">@DateTime.Now.ToString("MMMM")</span> <span class="day">@DateTime.Now.ToString("dd")</span>    </div>
</li>
    </ul>
    <ul class="calendar-buttons">
        <li class="prev">❮</li>
        <li class="next">❯</li>
        <li>Day</li>
        <li>Week</li>
    </ul>
    <ul class="room">
        @for (var room = 1; room <= 25; room++)
        {
            <li>Room @room</li>
        }
    </ul>
</div>

<ul class="timeslots">
    @for(var room = 1; room <= 25; room++) {
        <li>
            
            <ul>
                @for(var timeslot=8; timeslot<=23;timeslot++){
                <li data-room="@room" data-timeslot="@timeslot">@timeslot:00</li>
              
                }    
            </ul>
        </li>
  
    }
</ul>
@using (Ajax.BeginForm("makeReservation", "Home", new AjaxOptions {
    HttpMethod = "Post",
    UpdateTargetId = "result"
}))
{
<div class="reservation-popup-test ">
    <ul>
        <li class="header">Reserve<span class="glyphicon glyphicon-remove"></span></li> 
        <li class="col-lg-12 col-md-12">Your selection is from <span id="firstTimeslot"></span> to <span id="lastTimeslot"></span></li>

        <li class="col-lg-12 col-md-12"><input type="text" class="form-control input-sm" id="inputCourseName" name="description" placeholder="Course Name" /></li>

        <input type="hidden" name="firstTimeslot" value="0" />
        <input type="hidden" name="lastTimeslot" value="0" />
        <input type="hidden" name="room" value="0" />
        <input type="hidden" name="day" value="0" />
        <input type="hidden" name="month" value="0" />
        <input type="hidden" name="year" value="0" />
        <li class="col-lg-offset-8 col-md-offset-8 col-sm-offset-8 col-xs-offset-8"><input type="submit" id="submitButton" class="btn btn-primary"></li>
    </ul>


</div>
}

<div class="reservations">
    <div class="tabs">
        <div class="reservation-tab active">Reservation</div>
        <div class="waitlist-tab">Waitlist</div>
    </div>
    <div class="reservation-content">
        
    </div>
    <div class="confirm"><div class="confirm-yes">Confrim</div>
    <div class="confirm-no">Cancel</div>
    </div>
   

</div>


<div class="Single-Timeslot-Reserve">
	<ul>
		<li class="col-lg-12 col-md-12">Your selection is from <span id="firstTimeslot"></span> to <span id="lastTimeslot"></span></li>
		<li class="col-lg-12 col-md-12">Description: <span id="inputCourseName"></span></li>
	</ul>
</div>



